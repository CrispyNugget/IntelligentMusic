<!-- alert -->
<% if flash[:alert] %>   
<div class="container">     
    <div class="row">       
        <div class="span12">         
            <p class="alert alert-error"><%= flash[:alert] %></p>       
        </div>
    </div>
</div>   
<% end %> 

<!-- notice -->
<% if flash[:notice] %>   
<div class="container">     
    <div class="row">       
        <div class="span12">         
            <p class="alert"><%= flash[:notice] %></p>         
        </div>     
    </div>   
</div>  
<% end %> 
